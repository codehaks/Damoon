@page
@model Portal.Web.Pages.Posts.IndexModel
@{
    ViewData["Title"] = "Posts";
}

<table class="table table-borderless table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Desc.</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PostList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
               

            </tr>
        }

    </tbody>
</table>

